<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:dashboard="clr-namespace:Ambinity.Views.Dashboard"
             x:DataType="dashboard:DashboardDeviceViewModel"
             x:Class="Ambinity.Views.Dashboard.DashboardDeviceView">
    <Design.DataContext>
        <dashboard:DashboardDeviceViewModel/>
    </Design.DataContext>
    <Grid>
        <Border PointerReleased="InputElement_OnPointerReleased" Margin="10" Background="#2b2b2b" CornerRadius="7" Width="230" Height="270">
             
            <Grid RowDefinitions="*,auto,auto">
                <TextBlock Margin="10,30,0,0"
                           Text="{Binding Device.Name}"
                           FontSize="20" FontWeight="SemiBold">
                </TextBlock>
                <Button Grid.Row="1" Command="{Binding DeviceClickedCommand}"></Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
